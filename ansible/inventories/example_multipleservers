[mainserver]
yourserver.example.com ansible_ssh_user=ubuntu ansible_ssh_private_key_file="../path-to-your-secrets/your-ssh-key.pem"

[mainserver:vars]
deployment_environment_id=example_multipleservers
secrets_file_path="../../path-to-your-secrets/example_multipleservers.yml"
google_analytics_secrets_file_path="/path-to-your-google-analytics-secrets-json/google_analytics_credentials.json"


[ckanserver]
yourserver.example.com ansible_ssh_user=ubuntu ansible_ssh_private_key_file="../path-to-your-secrets/your-ssh-key.pem"

[ckanserver:vars]
deployment_environment_id=example_multipleservers
secrets_file_path="../../path-to-your-secrets/example_multipleservers.yml"
google_analytics_secrets_file_path="/path-to-your-google-analytics-secrets-json/google_analytics_credentials.json"