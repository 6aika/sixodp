
server {

  listen 443 ssl;
  server_name {{ public_facing_hostname }};

  error_page 500 502 503 504 /50x.html;

  location = /50x.html {
    root {{ static_path }};
    internal;
  }

  location / {
    proxy_pass http://127.0.0.1:8080/;
    proxy_set_header X-Url-Scheme $scheme;
    proxy_set_header Host $host;
  }

  {% if deployment_environment_id == 'vagrant' %}
  location /wp/ {
    alias /opt/wordpress/;
    try_files $uri $uri/ /wp//wp/index.php?$args; # https://trac.nginx.org/nginx/ticket/97
    index index.php index.html;

    location ~ \.php$ {
      try_files $uri =404;
      include fastcgi.conf;
      fastcgi_index index.php;
      fastcgi_param SCRIPT_FILENAME $request_filename;
      fastcgi_pass unix:/var/run/php/php7.0-fpm.sock;
    }
  }
  {% endif %}

  location /assets/ {
    alias {{ assets_path }}/;
  }

  location /.well-known/acme-challenge/ {
    alias /var/run/acme/acme-challenge/;
  }

  # file upload size in megabytes
  client_max_body_size {{ ckan_max_resource_size }}m;
}

{% if nginx.alternative_hostnames %}
# Redirect from alternative hostnames to primary hostname
server {
  listen 443 ssl;
  server_name {{ nginx.alternative_hostnames }};

  location / {
    return 301 https://{{ public_facing_hostname }}$request_uri;
  }

  location /.well-known/acme-challenge/ {
    alias /var/run/acme/acme-challenge/;
  }
}
{% endif %}

# Redirect HTTP to HTTPS
server {
  listen 80;
  server_name {{ public_facing_hostname }};

  location / {
    return 301 https://$server_name$request_uri;
  }

  location /.well-known/acme-challenge/ {
    alias /var/run/acme/acme-challenge/;
  }
}
