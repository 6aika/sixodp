{
  "scheming_version": 1,
  "dataset_type": "dataset",
  "about": "API catalog service/interface schema",
  "about_url": "http://github.com/vrk-kpa/api-catalog",
  "dataset_fields": [
    {
      "field_name": "title",
      "label": "Title",
      "preset": "title",
      "form_placeholder":"eg. A descriptive title",
      "required": true
    },
    {
      "field_name": "name",
      "label": "URL",
      "preset": "dataset_slug",
      "form_placeholder": "eg. my-dataset"
    },
    {
      "field_name": "notes",
      "label": "Description",
      "preset": "fluent_markdown",
      "form_placeholder": "eg. A detailed description",
      "form_languages": ["fi", "sv", "en"]
    },
    {
      "field_name": "tag_string",
      "label": "Tags",
      "preset": "tag_string_autocomplete",
      "form_placeholder":"eg. economy, mental health, government"
    },
    {
      "field_name": "validSince",
      "label": "Valid since",
      "preset": "date"
    },
    {
      "field_name": "validUntil",
      "label": "Valid until",
      "preset": "date"
    },
    {
      "field_name": "owner_org",
      "label": "Organization",
      "preset": "dataset_organization"
    },
    {
      "field_name": "shared_resource",
      "label": "Shared resource",
      "preset": "select",
      "required": true,
      "choices": [
        {
          "value": "yes",
          "label": "Yes"
        },
        {
          "value": "no",
          "label": "No"
        }
      ]
    },
    {
      "field_name": "url",
      "label": "Source",
      "form_placeholder": "http://example.com/dataset.json",
      "display_property": "foaf:homepage",
      "display_snippet": "link.html"
    },
    {
      "field_name": "maintainer",
      "label": "Maintainer",
      "form_placeholder": "Joe Bloggs",
      "display_property": "dc:contributor"
    },
    {
      "field_name": "maintainer_email",
      "label": "Maintainer Email",
      "form_placeholder": "joe@example.com",
      "display_property": "dc:contributor",
      "display_snippet": "email.html",
      "display_email_name_field": "maintainer"
    },
    {
      "field_name": "maintainer_phone",
      "label": "Maintainer phone number",
      "form_placeholder": "+358123456789",
      "display_property": "dc:contributor"
    }
  ],
  "resource_fields": [
    {
      "field_name": "url",
      "label": "URL",
      "preset": "resource_url_upload"
    },
    {
      "field_name": "name",
      "label": "Name",
      "required": true
    },
    {
      "field_name": "description",
      "label": "Description",
      "preset": "fluent_markdown",
      "form_placeholder": "eg. A detailed description",
      "form_languages": ["fi", "sv", "en"]
    },
    {
      "field_name": "type",
      "label": "Type",
      "preset": "fluent_text",
      "form_languages": ["fi", "sv", "en"]
    },
    {
      "field_name": "chargeability",
      "label": "Chargeability",
      "preset": "select",
      "choices": [
        { 
          "value": "yes",
          "label": "Yes"
        },
        { 
          "value": "no",
          "label": "No"
        },
        { 
          "value": "maybe",
          "label": "See description"
        }
      ]
    },
    {
      "field_name": "environment",
      "label": "Environment",
      "preset": "select",
      "choices": [
        { 
          "value": "test",
          "label": "Test environment"
        },
        { 
          "value": "production",
          "label": "Production environment"
        }
      ]
    },
    {
      "field_name": "format",
      "label": "Format",
      "preset": "apicatalog_resource_format_autocomplete"
    },
    {
      "field_name": "validSince",
      "label": "Valid since",
      "preset": "date"
    },
    {
      "field_name": "validUntil",
      "label": "Valid until",
      "preset": "date"
    },
    {
      "field_name": "connection_information",
      "label": "Connection information",
      "preset": "fluent_text",
      "form_languages": ["fi", "sv", "en"]
    },
    {
      "field_name": "availability",
      "label": "Availability",
      "preset": "fluent_text",
      "form_languages": ["fi", "sv", "en"]
    },
    {
      "field_name": "sla",
      "label": "SLA",
      "preset": "fluent_text",
      "form_languages": ["fi", "sv", "en"]
    },
    {
      "field_name": "response_time",
      "label": "Average response time",
      "form_placeholder": {
        "en": "eg. 100ms",
        "fi": "esim. 100ms"
      }
    },
    {
      "field_name": "service_status",
      "label": "Service status",
      "preset": "fluent_text",
      "form_languages": ["fi", "sv", "en"]
    }
  ]
}

